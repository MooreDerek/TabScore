@model TabScore.Models.Traveller

@{
    ViewData["Title"] = "Show Traveller Individual";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row mt-4">
    @if (Model.HandRecord)
    {
        <div class="col-9">
            <div class="row">
                <div class="col-12 text-center">
                    <h3>
                        Board @Model.BoardNumber
                    </h3>
                </div>
            </div>
            <div class="row">
                <div class="col-12 text-center">
                    @if (Model.PercentageNS == -1)
                    {
                        <h4>
                            Traveller
                        </h4>
                    }
                    else
                    {
                        <h4>
                            NS: @Model.PercentageNS% - EW: @(100 - Model.PercentageNS)%
                        </h4>
                    }
                </div>
            </div>
        </div>
        <div class="col-3">
            <button class="btn btn-outline-light btn-lg mr-2 my-2 float-right" ontouchstart="handRecordClick()">
                <img src="~/Cards Logo.png" />
            </button>
        </div>
    }
    else
    {
        <div class="col-12 text-center">
            <h4>
                Board @Model.BoardNumber
            </h4>
        </div>
        <div class="col-12 text-center">
            @if (Model.PercentageNS == -1)
            {
                <h4>
                    Traveller
                </h4>
            }
            else
            {
                <h4>
                    NS: @Model.PercentageNS% - EW: @(100 - Model.PercentageNS)%
                </h4>
            }
        </div>
    }
</div>

<div class="row">
    <div class="col-12">
        <table class="table-sm table-bordered text-center" style="margin:auto; width:50%">
            <thead class="thead-dark">
                <tr>
                    <th>NS</th>
                    <th>EW</th>
                    <th>Contract</th>
                    <th>By</th>
                    <th>Lead</th>
                    <th>Tricks</th>
                    <th>NS Score</th>
                    <th>EW Score</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Result in Model)
                {
                    string ScoreNS = "";
                    string ScoreEW = "";
                    if (Result.Score > 0)
                    {
                        ScoreNS = Result.Score.ToString();
                    }
                    else if (Result.Score < 0)
                    {
                        ScoreEW = (-Result.Score).ToString();
                    }
                    if (Model.PairNS == Result.PairNS)
                    {
                        <tr class="table-success">
                            <td>@Result.PairNS+@Result.South</td>
                            <td>@Result.PairEW+@Result.West</td>
                            <td>@Html.Raw(Result.DisplayTravellerContract())</td>
                            <td>@Result.NSEW</td>
                            <td>@Html.Raw(Result.DisplayLeadCard())</td>
                            <td>@Result.TricksTakenSymbol</td>
                            <td>@ScoreNS</td>
                            <td>@ScoreEW</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>@Result.PairNS+@Result.South</td>
                            <td>@Result.PairEW+@Result.West</td>
                            <td>@Html.Raw(Result.DisplayTravellerContract())</td>
                            <td>@Result.NSEW</td>
                            <td>@Html.Raw(Result.DisplayLeadCard())</td>
                            <td>@Result.TricksTakenSymbol</td>
                            <td>@ScoreNS</td>
                            <td>@ScoreEW</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    var isSubmitted = false;
    var scrollPosition = 0;
    var wait = 0;
    var interval = setInterval(scrollpage, 20)

    function scrollpage() {
        if (wait < 250) {
            wait++;
        }
        else {
            window.scrollTo(0, scrollPosition += 2);
            if (scrollPosition > document.body.clientHeight) {
                scrollPosition = 0;
                window.scrollTo(0, 0);
                wait = 0;
            }
        }
    }

    function validateOK() {
        if (!isSubmitted) {
            isSubmitted = true;
            location.href = '@Url.Action("OKButtonClick", "ShowTraveller")';
        }
    }

    function handRecordClick() {
        if (!isSubmitted) {
            isSubmitted = true;
            location.href = '@Url.Action("HandRecordButtonClick", "ShowTraveller")';
        }
    }

    function backClick() {
        if (!isSubmitted) {
            isSubmitted = true;
            location.href = '@Url.Action("BackButtonClick", "ShowTraveller")';
        }
    }
</script>

