@model TabScore.Models.RankingList

@{
    ViewBag.Title = "Show Ranking List - Individual";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row mt-2">
    <div class="col-12 text-center">
        <h4>
            Ranking List
        </h4>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table-sm table-bordered text-center" style="margin:auto; width:70%">
            <thead class="thead-dark">
                <tr>
                    <th>Rank</th>
                    <th>Player No</th>
                    <th>Percentage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Result in Model)
                {
                    if (Model.PairNS == Result.PairNo)
                    {
                        <tr class="table-success">
                            <td>@Result.Rank</td>
                            <td>@Result.PairNo</td>
                            <td>@Result.Score%</td>
                        </tr>
                    }
                    else if (Model.South == Result.PairNo)
                    {
                        <tr class="table-warning">
                            <td>@Result.Rank</td>
                            <td>@Result.PairNo</td>
                            <td>@Result.Score%</td>
                        </tr>
                    }
                    else if (Model.PairEW == Result.PairNo)
                    {
                        <tr class="table-danger">
                            <td>@Result.Rank</td>
                            <td>@Result.PairNo</td>
                            <td>@Result.Score%</td>
                        </tr>
                    }
                    else if (Model.West == Result.PairNo)
                    {
                        <tr class="table-info">
                            <td>@Result.Rank</td>
                            <td>@Result.PairNo</td>
                            <td>@Result.Score%</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>@Result.Rank</td>
                            <td>@Result.PairNo</td>
                            <td>@Result.Score%</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    var isSubmitted = false;

    function validateOK() {
        if (!isSubmitted) {
            isSubmitted = true;
            location.href = '@Url.Action("OKButtonClick", "ShowRankingList")?roundNumber=@Model.RoundNumber';
        }
    }

    function refreshClick() {
        if (!isSubmitted) {
            isSubmitted = true;
            location.href = '@Url.Action("RefreshButtonClick", "ShowRankingList")';
        }
    }
</script>
