    <div class="row">
        <div class="col-12 text-center">
            @for (int i = 21; i <= numTables && i < 26; i++)
                {
                <button id="tn@(i)" class="btn btn-primary btn-lg m-1" style="width: 3em" onclick="selectTableNumber('@i')">
