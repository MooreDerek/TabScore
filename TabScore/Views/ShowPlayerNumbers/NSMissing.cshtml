@{
    ViewBag.Title = "Show Player Numbers NS Missing";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row mt-5">
    <div class="col-12 text-center">
        <h3>
            Select Players:
        </h3>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12 text-center">
        <h4 style="color:blue">
            East/West: Pair @ViewData["PairEW"]
        </h4>
    </div>
</div>

<div class="row">
    <div class="col-1">
    </div>
    <div class="col-2 align-self-center">
        <h4>
            East:
        </h4>
    </div>
    <div class="col-2">
        @if (ViewData["PlayerNameEast"].ToString() == "")
        {
            <button class="btn btn-primary btn-lg m-1" onclick="location.href = '/EnterPlayerNumber/Index?dir=East'">
                Enter
            </button>
        }
        else
        {
            <button class="btn btn-info btn-lg m-1" onclick="location.href = '/EnterPlayerNumber/Index?dir=East'">
                Edit
            </button>
        }
    </div>
    <div class="col-7 align-self-center">
        <h4>
            @ViewData["PlayerNameEast"]
        </h4>
    </div>
</div>

<div class="row">
    <div class="col-1">
    </div>
    <div class="col-2 align-self-center">
        <h4>
            West:
        </h4>
    </div>
    <div class="col-2">
        @if (ViewData["PlayerNameWest"].ToString() == "")
        {
            <button class="btn btn-primary btn-lg m-1" onclick="location.href = '/EnterPlayerNumber/Index?dir=West'">
                Enter
            </button>
        }
        else
        {
            <button class="btn btn-info btn-lg m-1" onclick="location.href = '/EnterPlayerNumber/Index?dir=West'">
                Edit
            </button>
        }
    </div>
    <div class="col-7 align-self-center">
        <h4>
            @ViewData["PlayerNameWest"]
        </h4>
    </div>
</div>

<script>
    function validateOK() {
        if ("@ViewData["PlayerNameEast"]" == "" || "@ViewData["PlayerNameWest"]" == "") {
            window.alert("Please select a name for both East and West");
        }
        else {
            location.href = '/ShowPlayerNumbers/OKButtonClick';
        }
    }
</script>
