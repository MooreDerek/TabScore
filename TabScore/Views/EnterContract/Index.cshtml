@model TabScore.Models.TableStatus

<style>
    .btn-suit {
        background-color: paleturquoise;
        border-color: paleturquoise;
    }

    .btn-pass {
        background-color: darkgreen;
        border-color: darkgreen;
        color: white;
    }

    .btn-double {
        background-color: crimson;
        border-color: crimson;
        color: white;
    }

        .btn-double:hover {
            color: white;
        }

    .btn-redouble {
        background-color: darkblue;
        border-color: darkblue;
        color: white;
    }

        .btn-redouble:hover {
            color: white;
        }
</style>

<div class="row mt-5">
    <div class="col-12 text-center">
        <h3>
            Board @Model.ResultData.BoardNumber
        </h3>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center">
        <h3>
            Enter contract:
        </h3>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12 text-center">
        <button id="skip" class="btn btn-lg btn-outline-danger m-1" ontouchstart="setSkip()">
            Skip
        </button>
        <button id="pass" class="btn btn-lg btn-pass m-1" ontouchstart="setPass()">
            PASS Out
        </button>
        <button id="n1" class="btn btn-lg btn-primary m-1" style="width:3em" ontouchstart="setLevel(1)">
            1
        </button>
        <button id="n2" class="btn btn-lg btn-primary m-1" style="width:3em" ontouchstart="setLevel(2)">
            2
        </button>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center">
        <button id="n3" class="btn btn-lg btn-primary m-1" style="width:3em" ontouchstart="setLevel(3)">
            3
        </button>
        <button id="n4" class="btn btn-lg btn-primary m-1" style="width:3em" ontouchstart="setLevel(4)">
            4
        </button>
        <button id="n5" class="btn btn-lg btn-primary m-1" style="width:3em" ontouchstart="setLevel(5)">
            5
        </button>
        <button id="n6" class="btn btn-lg btn-primary m-1" style="width:3em" ontouchstart="setLevel(6)">
            6
        </button>
        <button id="n7" class="btn btn-lg btn-primary m-1" style="width:3em" ontouchstart="setLevel(7)">
            7
        </button>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center">
        <button id="sNT" class="btn btn-lg btn-suit m-1 p-1" style="width:3em; height:3em" ontouchstart="setSuit('NT')">
            NT
        </button>
        <button id="sS" class="btn btn-lg btn-suit m-1 p-1" style="width:3em; height:3em" ontouchstart="setSuit('S')">
            <div style="font-size: 2rem; color: black">&spades;</div>
        </button>
        <button id="sH" class="btn btn-lg btn-suit m-1 p-1" style="width:3em; height:3em" ontouchstart="setSuit('H')">
            <div style="font-size:2rem; color: red">&hearts;</div>
        </button>
        <button id="sD" class="btn btn-lg btn-suit m-1 p-1" style="width:3em; height:3em" ontouchstart="setSuit('D')">
            <div style="font-size: 2rem; color: lightsalmon ">&diams;</div>
        </button>
        <button id="sC" class="btn btn-lg btn-suit m-1 p-1" style="width:3em; height:3em" ontouchstart="setSuit('C')">
            <div style="font-size:2rem; color:lightslategrey">&clubs;</div>
        </button>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center">
        <button id="X" class="btn btn-lg btn-double m-1" style="width:3em" ontouchstart="setX()">
            X
        </button>
        <button id="XX" class="btn btn-lg btn-redouble m-1" style="width:3em" ontouchstart="setXX()">
            XX
        </button>
    </div>
</div>

<div class="row mt-2">
    <div class="col-12 text-center">
        <h3>
            by:
        </h3>
    </div>
</div>

<div class="row mt-2">
    <div class="col-12 text-center">
        <button id="dN" class="btn btn-lg btn-secondary m-1" ontouchstart="setNSEW('N')">
            North
        </button>
        <button id="dS" class="btn btn-lg btn-secondary m-1" ontouchstart="setNSEW('S')">
            South
        </button>
        <button id="dE" class="btn btn-lg btn-secondary m-1" ontouchstart="setNSEW('E')">
            East
        </button>
        <button id="dW" class="btn btn-lg btn-secondary m-1" ontouchstart="setNSEW('W')">
            West
        </button>
    </div>
</div>

<script>
    var level = @Model.ResultData.ContractLevel;
    var suit = '@Model.ResultData.ContractSuit';
    var double = '@Model.ResultData.ContractX';
    var NSEW = '@Model.ResultData.DeclarerNSEW';
    var urlOKButtonPass = '@Url.Action("OKButtonPass", "EnterContract")?sectionID=@Model.SectionID&tableNumber=@Model.TableNumber';
    var urlOKButtonSkip = '@Url.Action("OKButtonSkip", "EnterContract")?sectionID=@Model.SectionID&tableNumber=@Model.TableNumber';
    var urlOKButtonContract = '@Url.Action("OKButtonContract", "EnterContract")?sectionID=@Model.SectionID&tableNumber=@Model.TableNumber';
    var urlShowBoards = '@Url.Action("Index", "ShowBoards")?sectionID=@Model.SectionID&tableNumber=@Model.TableNumber';
</script>
<script src='@Url.Content("~/Scripts/EnterContract.js")' type="text/javascript"></script>