@model TabScore.Models.ResultsList

@{
    ViewData["Title"] = "Show Boards";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div id="notAllResultsModal" class="modal modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header text-danger">
            <p class="modal-title text-center">
                <h3>Warning</h3>
            </p>
        </div>
        <div class="modal-body">
            <p>Please enter a result (or Skip = Not played) for every board</p>
        </div>
        <div class="modal-footer">
            <button class="btn btn-lg btn-success" data-dismiss="modal">
                OK <span class="fa fa-check-circle"></span>
            </button>
        </div>
    </div>
</div>

<div class="row mt-5 mb-3">
    <div class="col-12 text-center">
        <h3>
            Boards:
        </h3>
    </div>
</div>

@foreach (var Result in Model)
{
    <div class="row">
        <div class="col-2 text-right pr-3 align-self-center">
            <h4>
                @Result.BoardNumber:
            </h4>
        </div>
        <div class="col-4 px-0">
            @if (Result.ContractLevel == -999)
            {
                <button class="btn btn-primary btn-lg px-4 m-1" ontouchstart="EnterEdit(@Result.BoardNumber)">
                    Enter
                </button>
            }
            else
            {
                if (Model.ShowViewButton && Result.ContractLevel != -1)
                {
                    <button class="btn btn-info btn-lg px-2 m-1" ontouchstart="EnterEdit(@Result.BoardNumber)">
                        Edit
                    </button>
                    <button class="btn btn-secondary btn-lg px-2" ontouchstart="View(@Result.BoardNumber)">
                        View
                    </button>
                }
                else
                {
                    <button class="btn btn-info btn-lg px-4 m-1" ontouchstart="EnterEdit(@Result.BoardNumber)">
                        Edit
                    </button>
                }
            }
        </div>
        <div class="col-6 align-self-center">
            <h4>
                @Html.Raw(Result.DisplayContract())
            </h4>
        </div>
    </div>
}

<script>
    var isSubmitted = false;

    function validateOK() {
        if (@Model.GotAllResults.ToString().ToLower()) {
            if (!isSubmitted) {
                isSubmitted = true;
                location.href = '@Url.Action("Index", "ShowRankingList")';
            }
        }
        else {
            $("#notAllResultsModal").modal()
        }
    }

    function EnterEdit(n) {
            if (!isSubmitted) {
                isSubmitted = true;
                location.href = '@Url.Action("Index", "EnterContract")?boardNumber=' + n;
            }
    }

    function View(n) {
            if (!isSubmitted) {
                isSubmitted = true;
                location.href = '@Url.Action("Index", "ShowTraveller")?boardNumber=' + n;
            }
    }
</script>

