@model TabScore.Models.ResultsList

@{
    ViewBag.Title = "Show Boards";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div id="notAllResultsModal" class="modal modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header text-danger">
            <p class="modal-title text-center">
                <h3>Warning</h3>
            </p>
        </div>
        <div class="modal-body">
            <p>Please enter a result (or Skip = Not played) for every board</p>
        </div>
        <div class="modal-footer">
            <button class="btn btn-lg btn-success" data-dismiss="modal">
                OK <span class="fa fa-check-circle"></span>
            </button>
        </div>
    </div>
</div>

<div class="row mt-5 mb-3">
    <div class="col-12 text-center">
        <h3>
            Boards:
        </h3>
    </div>
</div>

@foreach (var Result in Model)
{
    <div class="row">
        <div class="col-2 text-right pr-3 align-self-center">
            <h4>
                @Result.BoardNumber:
            </h4>
        </div>
        <div class="col-3">
            @if (Result.ContractLevel == -999)
            {
                <button class="btn btn-primary btn-lg m-1" ontouchstart="location.href = '@Url.Action("Index", "EnterContract")?boardNumber=' + @Result.BoardNumber">
                    Enter
                </button>
            }
            else
            {
                <button class="btn btn-info btn-lg m-1" ontouchstart="location.href = '@Url.Action("Index", "EnterContract")?boardNumber=' + @Result.BoardNumber">
                    Edit
                </button>
            }
        </div>
        <div class="col-7 align-self-center">
            <h4>
                @Html.Raw(Result.DisplayContract())
            </h4>
        </div>
    </div>
}

<script>
    function validateOK() {
        if (@Model.GotAllResults.ToString().ToLower()) {
            location.href = '@Url.Action("OKButtonClick", "ShowBoards")';
        }
        else {
            $("#notAllResultsModal").modal()
        }
    }
</script>

