@{
    ViewBag.Title = "Show Move NS Missing Individual";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="row mt-5">
    <div class="col-12 text-center">
        <h3>
            Move for Round @Session["CurrentRound"]
        </h3>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12 text-center">
        <h3 style="color:blue">
            East: @Session["PairEW"]
        </h3>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center">
        @if (Convert.ToInt32(ViewData["EastNewTable"]) == 0)
        {
            <h4>
                Move to Sit Out
            </h4>
        }
        else
        {
            if (ViewData["EastStayMove"].ToString() == "Move")
            {
                <h4>
                    Move to Table @ViewData["EastNewTable"] @ViewData["EastNewDirection"]
                </h4>
            }
            else
            {
                <h4>
                    Stay at Table @ViewData["EastNewTable"] @ViewData["EastNewDirection"]
                </h4>
            }
        }
    </div>
</div>

<div class="row mt-3">
    <div class="col-12 text-center">
        <h3 style="color:blue">
            West: @Session["West"]
        </h3>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center">
        @if (Convert.ToInt32(ViewData["WestNewTable"]) == 0)
        {
            <h4>
                Move to Sit Out
            </h4>
        }
        else
        {
            if (ViewData["WestStayMove"].ToString() == "Move")
            {
                <h4>
                    Move to Table @ViewData["WestNewTable"] @ViewData["WestNewDirection"]
                </h4>
            }
            else
            {
                <h4>
                    Stay at Table @ViewData["WestNewTable"] @ViewData["WestNewDirection"]
                </h4>
            }
        }
    </div>
</div>

<div class="row mt-4">
    <div class="col-12 text-center">
        <h3 style="color:green">
            Boards: @Session["LowBoard"] to @Session["HighBoard"]
        </h3>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center">
        @if (ViewData["BoardsNewTable"].ToString() == "0")
        {
            <h4>
                Pass to Relay Table
            </h4>
        }
        else
        {
            <h4>
                Pass to Table @ViewData["BoardsNewTable"]
            </h4>
        }
    </div>
</div>

<script>
    function validateOK() {
        location.href = '@Url.Action("OKButtonClick", "ShowMove")';
    }
</script>
