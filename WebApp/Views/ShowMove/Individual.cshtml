@{
    ViewBag.Title = "Show Move Individual";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="row mt-3">
    <div class="col-12 text-center">
        <h3>
            Move for Round @Session["Round"]
        </h3>
    </div>
</div>

<div class="row mt-3">
    <div class="col-12 text-center">
        <h3 style="color:blue">
            North: Number @Session["PairNS"]
        </h3>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center">
        @if (ViewData["StayMoveNorth"].ToString() == "Move")
        {
            <h3>
                Move to Table @ViewData["NorthNewTable"] @ViewData["NorthNewDirection"]
            </h3>
        }
        else
        {
            <h3>
                Stay at Table @ViewData["NorthNewTable"] @ViewData["NorthNewDirection"]
            </h3>
        }
    </div>
</div>

<div class="row mt-2">
    <div class="col-12 text-center">
        <h3 style="color:blue">
            South: Number @Session["South"]
        </h3>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center">
        @if (ViewData["StayMoveSouth"].ToString() == "Move")
        {
            <h3>
                Move to Table @ViewData["SouthNewTable"] @ViewData["SouthNewDirection"]
            </h3>
        }
        else
        {
            <h3>
                Stay at Table @ViewData["SouthNewTable"] @ViewData["SouthNewDirection"]
            </h3>
        }
    </div>
</div>

<div class="row mt-2">
    <div class="col-12 text-center">
        <h3 style="color:blue">
            East: Number @Session["PairEW"]
        </h3>
    </div>
</div>

