@model List<TabScore.Models.RankingListClass>
@{
    ViewBag.Title = "Show Ranking List - One Winner";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row mt-2">
    <div class="col-12 text-center">
        <h4>
            Ranking List
        </h4>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table-sm table-bordered text-center" style="margin:auto; width:70%">
            <thead class="thead-dark">
                <tr>
                    <th>Rank</th>
                    <th>Pair No</th>
                    <th>Percentage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Result in Model)
                {
                    if (Session["PairNS"].ToString() == Result.PairNo.ToString())
                    {
                        <tr class="table-success">
                            <td>@Result.Rank</td>
                            <td>@Result.PairNo</td>
                            <td>@Result.Score%</td>
                        </tr>
                    }
                    else if (Session["PairEW"].ToString() == Result.PairNo.ToString())
                    {
                        <tr class="table-warning">
                            <td>@Result.Rank</td>
                            <td>@Result.PairNo</td>
                            <td>@Result.Score%</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>@Result.Rank</td>
                            <td>@Result.PairNo</td>
                            <td>@Result.Score%</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function validateOK() {
        location.href = '@Url.Action("OKButtonClick", "ShowRankingList")?round=@ViewData["Round"]';
    }

    function refreshClick() {
        location.href = '@Url.Action("RefreshButtonClick", "ShowRankingList")?round=@ViewData["Round"]&finalRound=@ViewData["FinalRound"]';
    }
</script>
