@model TabScore.Models.PlayerEntryList

<div id="notAllPlayerNumbersModal" class="modal" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-danger">
                <p class="modal-title text-center">
                    <h3>Warning</h3>
                </p>
            </div>
            <div class="modal-body">
                <p>Please wait until all the player numbers for this table have been entered</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-lg btn-success" data-dismiss="modal">
                    OK <span class="fa fa-check-circle"></span>
                </button>
            </div>
        </div>
    </div>
</div>

<div id="notAllNamesModal" class="modal" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-primary">
                <p class="modal-title text-center">
                    <h3>Warning</h3>
                </p>
            </div>
            <div class="modal-body">
                <p>Please select a name or 'Unknown' for all players</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-lg btn-success" data-dismiss="modal">
                    OK <span class="fa fa-check-circle"></span>
                </button>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12 text-center">
        <h3>
            Enter/Edit Players:
        </h3>
    </div>
</div>

@foreach (var playerEntry in Model)
{
    <div class="row mt-3">
        <div class="col-12 text-center">
            <h3 style="color:blue">
                @playerEntry.Direction: @playerEntry.Number
            </h3>
        </div>
    </div>

    <div class="row">
        <div class="col-1">
        </div>
        <div class="col-3">
            @if (playerEntry.Name == "")
            {
                <button class="btn btn-primary btn-lg m-1" ontouchstart="EnterPlayerNumber('@playerEntry.Direction')">
                    Enter
                </button>
            }
            else
            {
                <button class="btn btn-info btn-lg m-1" ontouchstart="EnterPlayerNumber('@playerEntry.Direction')">
                    Edit
                </button>
            }
        </div>
        <div class="col-8 align-self-center">
            <h4>
                @playerEntry.Name
            </h4>
        </div>
    </div>
}

@if (Model.ShowMessage)
{
    <div class="row mt-5">
        <div class="col-1">
        </div>
        <div class="col-10 text-center">
            <h5>
                Please wait until all the player numbers for this table have been entered before pressing OK
            </h5>
        </div>
        <div class="col-1">
        </div>
    </div>
}

@if (Model.ShowWarning)
{
    <script>
        $("#notAllPlayerNumbersModal").modal("show");
    </script>
}

<script>
    var isSubmitted = false;

    $(document).on('touchstart', '#OKButton:enabled', function () {
        if (@Model.NumberOfBlankEntries > 0) {
            $("#notAllNamesModal").modal("show");
        }
        else {
            if (!isSubmitted) {
                isSubmitted = true;
                location.href = '@Url.Action("OKButtonClick", "ShowPlayerNumbers")?tabletDeviceNumber=@Model.TabletDeviceNumber';
            }
        }
    });

    function EnterPlayerNumber(direction) {
            if (!isSubmitted) {
                isSubmitted = true;
                location.href = '@Url.Action("Index", "EnterPlayerNumber")?tabletDeviceNumber=@Model.TabletDeviceNumber&direction=' + direction;
            }
    }
</script>