@model TabScore.Models.Round

@{
    ViewBag.Title = "Show Player Numbers EW Missing";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div id="notAllNamesModal" class="modal modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header text-primary">
            <p class="modal-title text-center">
                <h3>Warning</h3>
            </p>
        </div>
        <div class="modal-body">
            <p>Please select a name for both North and South</p>
        </div>
        <div class="modal-footer">
            <button class="btn btn-lg btn-success" data-dismiss="modal">
                OK <span class="fa fa-check-circle"></span>
            </button>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12 text-center">
        <h3>
            Enter/Edit Players:
        </h3>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12 text-center">
        <h3 style="color:blue">
            North: @Model.PairNS
        </h3>
    </div>
</div>

<div class="row">
    <div class="col-1">
    </div>
    <div class="col-3">
        @if (Model.NameNorth == "")
        {
            <button class="btn btn-primary btn-lg m-1" ontouchstart="location.href = '@Url.Action("Index", "EnterPlayerNumber")?direction=North'">
                Enter
            </button>
        }
        else
        {
            <button class="btn btn-info btn-lg m-1" ontouchstart="location.href = '@Url.Action("Index", "EnterPlayerNumber")?direction=North'">
                Edit
            </button>
        }
    </div>
    <div class="col-8 align-self-center">
        <h4>
            @Model.NameNorth
        </h4>
    </div>
</div>

<div class="row mt-3">
    <div class="col-12 text-center">
        <h3 style="color:blue">
            South: @Model.South
        </h3>
    </div>
</div>

<div class="row">
    <div class="col-1">
    </div>
    <div class="col-3">
        @if (Model.NameSouth == "")
        {
            <button class="btn btn-primary btn-lg m-1" ontouchstart="location.href = '@Url.Action("Index", "EnterPlayerNumber")?direction=South'">
                Enter
            </button>
        }
        else
        {
            <button class="btn btn-info btn-lg m-1" ontouchstart="location.href = '@Url.Action("Index", "EnterPlayerNumber")?direction=South'">
                Edit
            </button>
        }
    </div>
    <div class="col-8 align-self-center">
        <h4>
            @Model.NameSouth
        </h4>
    </div>
</div>

<script>
    function validateOK() {
        if ("@Model.NameNorth" == "" || "@Model.NameSouth" == "") {
            $("#notAllNamesModal").modal();
        }
        else {
            location.href = '@Url.Action("OKButtonClick", "ShowPlayerNumbers")';
        }
    }
</script>
