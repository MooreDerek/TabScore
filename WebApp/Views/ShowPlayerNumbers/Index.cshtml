@{
    ViewBag.Title = "Show Player Numbers";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div id="notAllNamesModal" class="modal modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header text-primary">
            <p class="modal-title text-center">
                <h3>Warning</h3>
            </p>
        </div>
        <div class="modal-body">
            <p>Please select a name for all 4 players</p>
        </div>
        <div class="modal-footer">
            <button class="btn btn-lg btn-success" data-dismiss="modal">
                OK <span class="fa fa-check-circle"></span>
            </button>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12 text-center">
        <h3>
            Enter/Edit Players:
        </h3>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12 text-center">
        <h4 style="color:blue">
            North/South: Pair @ViewData["PairNS"]
        </h4>
    </div>
</div>

<div class="row">
    <div class="col-2 text-right pr-3 align-self-center">
        <h4>
            North:
        </h4>
    </div>
    <div class="col-3">
        @if (ViewData["PlayerNameNorth"].ToString() == "")
        {
            <button class="btn btn-primary btn-lg m-1" ontouchstart="location.href = '@Url.Action("Index", "EnterPlayerNumber")?dir=North'">
                Enter
            </button>
        }
        else
        {
            <button class="btn btn-info btn-lg m-1" ontouchstart="location.href = '@Url.Action("Index", "EnterPlayerNumber")?dir=North'">
                Edit
            </button>
        }
    </div>
    <div class="col-7 align-self-center">
        <h4>
            @ViewData["PlayerNameNorth"]
        </h4>
    </div>
</div>

