<script>
    function validateOK() {
        if ("@ViewData["PlayerNameNorth"]" == "" || "@ViewData["PlayerNameSouth"]" == "" || "@ViewData["PlayerNameEast"]" == "" || "@ViewData["PlayerNameWest"]" == "") {
            $("#notAllNamesModal").modal();
        }
        else {
            location.href = '@Url.Action("OKButtonClick", "ShowPlayerNumbers")';
        }
    }
</script>
