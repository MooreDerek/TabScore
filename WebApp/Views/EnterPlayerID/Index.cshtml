@model TabScore.Models.EnterPlayerID
@using Resources
@using System.Web.Optimization

<style>
    .btn-numeric {
        font-size: 1.5rem;
        width: 3em;
    }
</style>

<div id="noPlayerNoModal" class="modal" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-primary">
                <p class="modal-title text-center">
                    <h3>@Strings.Warning</h3>
                </p>
            </div>
            <div class="modal-body">
                <p>@Strings.ErrorNoID</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-lg btn-success" data-dismiss="modal">
                    @Strings.OK <span class="fa fa-check-circle"></span>
                </button>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12 text-center p-0">
        <h3>
            @Strings.EnterID @Model.DisplayDirection
        </h3>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12 text-center p-0">
        <input class="form-control-lg text-center mx-auto my-1" style="width: 8em" type="text" id="playerNumberBox" value="" readonly>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12 text-center p-0">
        <button id="nk" class="btn btn-secondary btn-lg m-1" onclick="unknown()">
            @Strings.Unknown
        </button>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center p-0">
        <button class="btn btn-primary btn-lg btn-numeric px-0 m-1" style="width:2.5em" onclick="addNumber(1)">
            1
        </button>
        <button class="btn btn-primary btn-lg btn-numeric px-0 m-1" style="width:2.5em" onclick="addNumber(2)">
            2
        </button>
        <button class="btn btn-primary btn-lg btn-numeric px-0 m-1" style="width:2.5em" onclick="addNumber(3)">
            3
        </button>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center p-0">
        <button class="btn btn-primary btn-lg btn-numeric px-0 m-1" style="width:2.5em" onclick="addNumber(4)">
            4
        </button>
        <button class="btn btn-primary btn-lg btn-numeric px-0 m-1" style="width:2.5em" onclick="addNumber(5)">
            5
        </button>
        <button class="btn btn-primary btn-lg btn-numeric px-0 m-1" style="width:2.5em" onclick="addNumber(6)">
            6
        </button>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center p-0">
        <button class="btn btn-primary btn-lg btn-numeric px-0 m-1" style="width:2.5em" onclick="addNumber(7)">
            7
        </button>
        <button class="btn btn-primary btn-lg btn-numeric px-0 m-1" style="width:2.5em" onclick="addNumber(8)">
            8
        </button>
        <button class="btn btn-primary btn-lg btn-numeric px-0 m-1" style="width:2.5em" onclick="addNumber(9)">
            9
        </button>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center p-0">
        <button class="btn btn-warning btn-lg btn-numeric px-0 m-1" style="width:2.5em" onclick="clearLastEntry()">
            CE
        </button>
        <button class="btn btn-primary btn-lg btn-numeric px-0 m-1" style="width:2.5em" onclick="addNumber(0)">
            0
        </button>
        <button class="btn btn-danger btn-lg btn-numeric px-0 m-1" style="width:2.5em" onclick="clearplayerNumber()">
            C
        </button>
    </div>
</div>

<script>
    var urlOKButtonClick = '@Url.Action("OKButtonClick", "EnterPlayerID")?tabletDeviceNumber=@Model.TabletDeviceNumber&direction=@Model.Direction';
    var stringUnknown = '@Strings.Unknown';
</script>
@Scripts.Render("~/bundles/enterPlayerIdJS")